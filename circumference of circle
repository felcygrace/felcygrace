import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner a= new Scanner(System.in);
        double a1=a.nextDouble();
        double p=22/7;
        double area=(2*p*a1);
        double round=(double)Math.round(area*100)/100;
        System.out.println(area);
    }
}
