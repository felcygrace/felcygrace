public class submat{
    public static void main(String[] args){
        int row,col;
        int a[][]={{2,3,4},{1,2,3},{5,6,7}};
        int b[][]={{4,7,8},{2,4,6},{5,6,8}};
        row=a.length;
        col=a[0].length;
        int[][] diff=new int[row][col];
        for(int i=0;i<row;i++){
            for(int j=0;j<col;j++){
                diff[i][j]=a[i][j]-b[i][j];
                System.out.print(diff[i][j]+" ");
            }
        System.out.println();
        }
    }
}
